{
  "name": "wdio-mocha-web-framework",
  "version": "1.0.0",
  "description": "Professional TypeScript-WebdriverIO-Mocha-Web Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "wdio run ./config/wdio.conf.ts",
    "test:chrome": "wdio run ./config/wdio.chrome.conf.ts",
    "test:firefox": "wdio run ./config/wdio.firefox.conf.ts",
    "test:edge": "wdio run ./config/wdio.edge.conf.ts",
    "test:safari": "wdio run ./config/wdio.safari.conf.ts",
    "test:headless": "HEADLESS=true wdio run ./config/wdio.chrome.conf.ts",
    "test:smoke": "wdio run ./config/wdio.chrome.conf.ts --spec=**/smoke/*.spec.ts",
    "test:regression": "wdio run ./config/wdio.chrome.conf.ts --spec=**/*.spec.ts",
    "test:parallel": "wdio run ./config/wdio.parallel.conf.ts",
    "clean": "rm -rf reports/* screenshots/* logs/* allure-results/*",
    "report": "allure generate allure-results --clean && allure open",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "webdriverio",
    "mocha",
    "typescript",
    "web",
    "automation",
    "tdd"
  ],
  "author": "Pravin",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@wdio/allure-reporter": "^9.2.9",
    "@wdio/cli": "^9.2.9",
    "@wdio/local-runner": "^9.2.9",
    "@wdio/mocha-framework": "^9.2.8",
    "@wdio/spec-reporter": "^9.2.8",
    "allure-commandline": "^2.32.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@wdio/globals": "^9.2.9",
    "chai": "^4.5.0",
    "dotenv": "^16.4.7",
    "winston": "^3.17.0"
  }
}
